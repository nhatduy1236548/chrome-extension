{
  "name": "chrome-extension",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev && npm-watch",
    "start": "next start",
    "lint": "next lint",
  "lint:build": "mv out/_next out/assets && sed -i 's/\\\\/_next/\\\\/assets/g' out/**.html",
  "build": "next build && next export && npm run lint:build"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.5",
    "@types/node": "20.1.0",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "next": "13.4.1",
    "postcss": "8.4.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.235",
    "@types/firefox-webext-browser": "^111.0.1",
    "npm-watch": "^0.11.0"
  },

  "watch": {
    "build": {
      "patterns": [
        "styles/**",
        "pages/**",
        "public/**",
        "helpers/**",
        "next.config.js"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next",
        ".vscode"
      ],
      "extensions": [
        "js",
        "json"
      ]
    }
  }
}
